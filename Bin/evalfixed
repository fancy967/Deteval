def printAndRun(com)
	$stderr.puts com
	if not system(com)
		$stderr.printf "Error code: %d\n",$?
		exit 1
	end
end	

if ARGV.length()<1
	$stderr.puts ("usage: evalfixed <det-results-xml> <groundtruth-xml>")
	exit 1
end


com="./evaldetection "+ARGV.join(" ")+" > _x.xml"
printAndRun(com)

com="./readdeteval _x.xml"
printAndRun(com)
